Location pickupItem
    id: "s1_pickup"
    type: "SmallLoadCarrier"
End

Location dropoffItem
    id: "ws1_dropoff"
    type: "SmallLoadCarrier"
End

Event event1
    id : "lager_agv_loaded"
    value : true
End

Event event2
    id : "lager_agv_loaded"
    value : false
End

Rule before(event1, event2)
    event1.value == event2.time
End

TransportOrderStep tosWarehouse1
    Location pickupItem
End

TransportOrderStep tosProduction1
    Location dropoffItem
End

Task helloWorld
    Transport
    From tosWarehouse1
    To tosProduction1
    
    FinishedBy before(event1, event2)
End

Task mainTask
    Test
End
